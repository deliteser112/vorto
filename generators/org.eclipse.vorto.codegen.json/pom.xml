<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<properties>
		<bundle.symbolicName>org.eclipse.vorto.codegen.json</bundle.symbolicName>
		<bundle.namespace>org.eclipse.vorto</bundle.namespace>
	</properties>

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.eclipse.vorto</groupId>
		<artifactId>generators</artifactId>
		<version>0.10.0-SNAPSHOT</version>
	</parent>

	<name>Vorto JSON Generator (Incubation)</name>
	<artifactId>org.eclipse.vorto.codegen.json</artifactId>

	<packaging>eclipse-plugin</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<manifestLocation>META-INF</manifestLocation>
					<instructions>
						<Bundle-SymbolicName>${bundle.symbolicName};singleton:=true</Bundle-SymbolicName>
						<Bundle-Version>0.10.0.qualifier</Bundle-Version>
						<Bundle-Description>Vorto JSON Generator lets you generate JSON from an information model.</Bundle-Description>
							<Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
						<Require-Bundle>
							org.eclipse.vorto.core,
							com.google.guava,
							org.eclipse.vorto.codegen,
							org.apache.commons.lang3
						</Require-Bundle>
						<Export-Package>${bundle.namespace}.codegen.json,${bundle.namespace}.*;version="${project.version}"</Export-Package>
						<Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<Embed-Directory>target/dependency</Embed-Directory>
						<Embed-StripGroup>true</Embed-StripGroup>
					</instructions>
				</configuration>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>install</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- Before compiling copy dependencies to MANIFEST classpath -->
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<?m2e ignore?> <!-- suppress eclipse lifecycle configuration warning -->
						<id>copy-dependencies</id>
						<phase>process-sources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.7.5</version>
		</dependency>

	</dependencies>
</project>